import pygame
import time
import random 
from pygame.locals import *


#bg 
def Changebackground(img):
    #change the bg 
    background = pygame.image.load(img)
    #set size 
    bg = pygame.transform.scale(background,(screen_width,screen_height))
    screen.blit(bg,(0,0))

pygame.init()
pygame.display.set_caption("Recycle marathon ")

# set width and height 
screen_width = 900
screen_height = 700
screen = pygame.display.set_mode([screen_width,screen_height])

#player sprite 
class Bin(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()
        self.image = pygame.image.load("bin.png").convert_alpha()
        self.image = pygame.transform.scale(self.image,(40,60))
        self.rect = self.image.get_rect()

#recicle sprite 
class Recyclable(pygame.sprite.Sprite):
    def __init__(self,img):
        super().__init__()
        self.image = pygame.image.load(img).convert_alpha()
        self.image = pygame.transform.scale(self.image,(30,30))
        self.rect = self.image.get_rect()

#not recicleblelelelellele
class Non_recyclable(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()
        self.image = pygame.image.load("plastic.png").convert_alpha()
        self.image = pygame.transform.scale(self.image,(40,40))
        self.rect = self.image.get_rect()


#list of image for  recycleble class
images = ["item1.png","item2.png","item3.png"]

#create sprite goups 
item_list = pygame.sprite.Group()
allsprites = pygame.sprite.Group()
plastic_list = pygame.sprite.Group()

#create it 
for i in range(50):
    item = Recyclable(random.choice(images))
    #set a random location 
    item.rect.x = random.randrange(screen_width)
    item.rect.y = random.randrange(screen_height)
    #additemtolisst
    item_list.add(item)
    allsprites.add(item)

for i in range(20):
    plastic = Non_recyclable()
    #set random location 
    plastic.rect.x = random.randrange(screen_width)
    plastic.rect.y = random.randrange(screen_height)
    # add it to list
    plastic_list.add(plastic)
    allsprites.add(plastic)
#Create bin 
bin = Bin()
allsprites.add(bin)

#Initialize esseential variables 
# DEf color
WHITE = (255,255,255)
RED = (255,0,0)
            
playing = True
score = 0
#clock 
clock = pygame.time.Clock()
#start time 
start_time = time.time()
#font to print score on screen 
myFont = pygame.font.SysFont("Times new Roman",22)
timingFont = pygame.font.SysFont("Times new Roman",25)
text = myFont.render("Score = "+str(0),True,WHITE)


# _______________________________________MAIN LOOP ______________________________________________#
while playing:
    clock.tick(30)

    #quit the game event 
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            playing = False


    #check if time > 60  sec
    timeElapsed = time.time()-start_time
    if timeElapsed >=60:
        if  score > 50:
            text = myFont.render("                Bin Loot Successfully            ",True,RED)
        else:
            text = myFont.render("                   Better Luck Next Time             ",True,WHITE)
            #change bg
            Changebackground("lose.png")
        screen.blit(text,(250,40))

    else:
        #change bg 
        Changebackground("bg.png")
        countDown = timingFont.render("Time left:"+str(60-int(timeElapsed)),True,WHITE)
        screen.blit(countDown,(20,10))

        keys = pygame.key.get_pressed()
        if keys[pygame.K_UP]: #UP
            if bin.rect.y >0:
                bin.rect.y -= 5

        if keys[pygame.K_DOWN]: #DOWN
            if bin.rect.y <630:
                bin.rect.y += 5

        if keys[pygame.K_LEFT]: #LEFT
            if bin.rect.x>0:
                bin.rect.x -= 5 

        if keys[pygame.K_RIGHT]: #REGHT
            if bin.rect.x<850:
                bin.rect.x += 5 

        item_hit_list = pygame.sprite.spritecollide(bin,item_list,True)
        plastic_hit_list = pygame.sprite.spritecollide(bin,plastic_list,True)

        #check the list of collisions
        for item in item_hit_list:
            score += 1
            text = myFont.render("Score ="+str(score),True,WHITE)

        for plastic in plastic_hit_list:
            score -= 5 
            tetx = myFont.render("score "+str(score),True,WHITE)

            screen.blit(text,(20,50))

            allsprites.draw(screen)

        pygame.display.update()

pygame.quit()
